<div class="container mt-4">
  <h1>Nouveau joueur - <%= @team.name %></h1>

  <div class="row">
    <div class="col-md-8">
      <%= form_with model: [@team, @player], local: true, class: 'row g-3' do |form| %>
        <% if @player.errors.any? %>
          <div class="col-12">
            <div class="alert alert-danger">
              <h5>Erreurs:</h5>
              <ul class="mb-0">
                <% @player.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div class="col-md-6">
          <%= form.label :name, "Nom du joueur", class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control',
                              placeholder: 'Ex: Aragorn' %>
        </div>

        <div class="col-md-6">
          <%= form.label :position, "Poste", class: 'form-label' %>
          <%= form.select :position,
                          options_for_select(Player::POSITIONS.map { |p| [p, p] }),
                          { prompt: 'Sélectionnez un poste' },
                          { class: 'form-select' } %>
        </div>

        <div class="col-12">
          <div class="mb-3">
            <h6>Postes disponibles :</h6>
            <ul class="small text-muted">
              <li><strong>Heal</strong> : Soigneur, maintient l'équipe en vie</li>
              <li><strong>Tank</strong> : Défenseur, absorbe les dégâts</li>
              <li><strong>DPS</strong> : Attaquant, inflige les dégâts</li>
            </ul>
          </div>
        </div>

        <div class="col-12">
          <%= form.submit 'Ajouter le joueur', class: 'btn btn-success' %>
          <%= link_to 'Annuler', @team, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h6 class="card-title">Équipe : <%= @team.name %></h6>
          <p class="card-text">
            <strong>Ville:</strong> <%= @team.city %><br>
            <strong>Joueurs actuels:</strong> <%= @team.player_count %>/11
          </p>

          <% if @team.player_count > 0 %>
            <h6>Joueurs existants :</h6>
            <ul class="small">
              <% @team.players.each do |player| %>
                <li><%= player.name %> (<%= player.position %>)</li>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
