<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Tous les joueurs</h1>
    <div>
      <%= link_to 'Nouveau joueur', new_player_path, class: 'btn btn-primary' %>
      <%= link_to 'Gestion équipes', teams_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <!-- Statistiques rapides -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card bg-primary text-white">
        <div class="card-body text-center">
          <h4><%= @players.count %></h4>
          <p class="mb-0">Joueurs totaux</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-success text-white">
        <div class="card-body text-center">
          <h4><%= @teams.select(&:full?).count %></h4>
          <p class="mb-0">Équipes complètes</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-info text-white">
        <div class="card-body text-center">
          <h4><%= @players.where(position: 'Tank').count %></h4>
          <p class="mb-0">Tanks</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-warning text-white">
        <div class="card-body text-center">
          <h4><%= @players.where(position: 'Heal').count %></h4>
          <p class="mb-0">Heals</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Filtres par équipe -->
  <div class="card mb-4">
    <div class="card-body">
      <h6>Filtrer par équipe :</h6>
      <div class="btn-group flex-wrap" role="group">
        <%= link_to 'Tous', players_path,
                    class: "btn btn-outline-primary #{'active' if params[:team_id].blank?}" %>
        <% @teams.each do |team| %>
          <%= link_to "#{team.name} (#{team.player_count})",
                      players_path(team_id: team.id),
                      class: "btn btn-outline-secondary #{'active' if params[:team_id] == team.id.to_s}" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Liste des joueurs -->
  <% if @players.any? %>
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <%= @players.count %> joueur<%= 's' if @players.count > 1 %>
          <% if params[:team_id].present? %>
            dans l'équipe "<%= @teams.find(params[:team_id]).name %>"
          <% end %>
        </h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Nom</th>
                <th>Poste</th>
                <th>Équipe</th>
                <th>Ville</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% displayed_players = params[:team_id].present? ? @players.where(team_id: params[:team_id]) : @players %>
              <% displayed_players.each do |player| %>
                <tr>
                  <td><strong><%= player.name %></strong></td>
                  <td><%= position_badge(player.position) %></td>
                  <td>
                    <%= link_to player.team.name, player.team, class: 'text-decoration-none' %>
                    <br><small class="text-muted">(<%= player.team.player_count %>/11 joueurs)</small>
                  </td>
                  <td><%= player.team.city %></td>
                  <td>
                    <%= link_to 'Voir équipe', player.team, class: 'btn btn-sm btn-info' %>
                    <%= link_to 'Modifier', edit_team_player_path(player.team, player), class: 'btn btn-sm btn-warning' %>
                    <%= link_to 'Supprimer', team_player_path(player.team, player),
                                method: :delete, confirm: 'Êtes-vous sûr?', class: 'btn btn-sm btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <div class="text-center py-5">
      <h3 class="text-muted">Aucun joueur</h3>
      <p class="text-muted mb-4">Commencez par créer votre premier joueur !</p>
      <%= link_to 'Créer un joueur', new_player_path, class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>

  <!-- Répartition par poste -->
  <% if @players.any? %>
    <div class="card mt-4">
      <div class="card-header">
        <h6 class="mb-0">Répartition par poste</h6>
      </div>
      <div class="card-body">
        <div class="row">
          <% Player::POSITIONS.each do |position| %>
            <div class="col-md-4">
              <div class="text-center">
                <%= position_badge(position) %>
                <h4 class="mt-2"><%= @players.where(position: position).count %></h4>
                <small class="text-muted">
                  <%= ((@players.where(position: position).count.to_f / @players.count) * 100).round(1) %>%
                </small>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
