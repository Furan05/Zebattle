<div class="container mt-4">
  <h1>Modifier l'équipe</h1>

  <%= form_with model: @team, local: true, class: 'row g-3' do |form| %>
    <% if @team.errors.any? %>
      <div class="col-12">
        <div class="alert alert-danger">
          <h5>Erreurs:</h5>
          <ul class="mb-0">
            <% @team.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="col-md-6">
      <%= form.label :name, "Nom de l'équipe", class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', maxlength: 50 %>
      <div class="form-text">Maximum 50 caractères</div>
    </div>

    <div class="col-md-6">
      <%= form.label :city, "Ville", class: 'form-label' %>
      <%= form.text_field :city, class: 'form-control' %>
    </div>

    <div class="col-12">
      <%= form.submit 'Mettre à jour', class: 'btn btn-success' %>
      <%= link_to 'Voir l\'équipe', @team, class: 'btn btn-info' %>
      <%= link_to 'Retour', teams_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
