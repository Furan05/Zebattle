<div class="container mt-4">
  <h1>Modifier l'équipe</h1>

  <%= form_with model: @team, local: true, class: 'row g-3' do |form| %>
    <% if @team.errors.any? %>
      <div class="col-12">
        <div class="alert alert-danger">
          <h5>Erreurs:</h5>
          <ul class="mb-0">
            <% @team.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="col-md-6">
      <%= form.label :name, "Nom de l'équipe", class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', maxlength: 50 %>
      <div class="form-text">Maximum 50 caractères</div>
    </div>

    <div class="col-md-6">
      <%= form.label :city, "Ville", class: 'form-label' %>
      <%= form.text_field :city, class: 'form-control' %>
    </div>

    <div class="col-12">
      <%= form.submit 'Mettre à jour', class: 'btn btn-success' %>
      <%= link_to 'Voir l\'équipe', @team, class: 'btn btn-info' %>
      <%= link_to 'Retour', teams_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>

<style>
  .btn {
    border-radius: 50px !important;
    padding: 0.5rem 1.5rem !important;
    font-weight: 500 !important;
    transition: all 0.3s ease !important;
    transform: translateY(0) !important;
  }

  .btn:hover {
    transform: translateY(-2px) !important;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
  }

  .btn-info:hover {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    border-color: transparent !important;
  }

  .btn-secondary:hover {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%) !important;
    border-color: transparent !important;
  }
</style>
