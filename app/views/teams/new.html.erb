<div class="container">
  <!-- Page Title -->
  <div class="text-center mb-5">
    <h1 class="page-title animate-on-scroll">
      <i class="fas fa-plus-circle me-3"></i>
      Nouvelle Équipe
    </h1>
    <p class="animate-on-scroll" style="font-size: 1.2rem; opacity: 0.8; margin-bottom: 30px;">
      Créez une nouvelle équipe de guerriers légendaires
    </p>
  </div>

  <!-- Form Card -->
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="card animate-on-scroll">
        <div class="card-body p-4">
          <%= form_with model: @team, local: true do |form| %>
            <% if @team.errors.any? %>
              <div class="alert alert-danger mb-4">
                <h5 class="mb-3">
                  <i class="fas fa-exclamation-triangle me-2"></i>
                  Erreurs détectées:
                </h5>
                <ul class="mb-0">
                  <% @team.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-4">
              <%= form.label :name, class: 'form-label' do %>
                <i class="fas fa-shield-alt me-2" style="color: #667eea;"></i>
                Nom de l'équipe
              <% end %>
              <%= form.text_field :name, class: 'form-control', maxlength: 50,
                                  placeholder: 'Ex: Les Dragons de Feu, Les Titans de Glace...' %>
              <div class="form-text" style="opacity: 0.7;">
                <i class="fas fa-info-circle me-1"></i>
                Maximum 50 caractères - Choisissez un nom épique !
              </div>
            </div>

            <div class="mb-4">
              <%= form.label :city, class: 'form-label' do %>
                <i class="fas fa-map-marker-alt me-2" style="color: #4facfe;"></i>
                Ville d'origine
              <% end %>
              <%= form.text_field :city, class: 'form-control',
                                  placeholder: 'Ex: Paris, Londres, Tokyo...' %>
              <div class="form-text" style="opacity: 0.7;">
                <i class="fas fa-globe me-1"></i>
                D'où viennent vos guerriers ?
              </div>
            </div>

            <div class="d-flex gap-3 justify-content-center mt-4">
              <%= form.submit 'Créer l\'Équipe', class: 'btn btn-success btn-lg' do %>
                <i class="fas fa-plus me-2"></i>
                Créer l'Équipe
              <% end %>
              <%= link_to teams_path, class: 'btn btn-secondary btn-lg' do %>
                <i class="fas fa-arrow-left me-2"></i>
                Retour
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Info Section -->
  <div class="row justify-content-center mt-5">
    <div class="col-lg-8">
      <div class="card animate-on-scroll" style="border-left: 4px solid #4facfe;">
        <div class="card-body">
          <h5 class="mb-3" style="color: #4facfe; font-weight: bold;">
            <i class="fas fa-lightbulb me-2"></i>
            Conseils pour créer une équipe
          </h5>
          <div class="row">
            <div class="col-md-4">
              <div class="text-center mb-3">
                <i class="fas fa-users fa-2x mb-2" style="color: #667eea;"></i>
                <h6 style="font-weight: bold;">Composition</h6>
                <small style="opacity: 0.8;">Une équipe complète a besoin de 11 joueurs avec des rôles variés</small>
              </div>
            </div>
            <div class="col-md-4">
              <div class="text-center mb-3">
                <i class="fas fa-balance-scale fa-2x mb-2" style="color: #f093fb;"></i>
                <h6 style="font-weight: bold;">Équilibre</h6>
                <small style="opacity: 0.8;">Mélangez les rôles : Tanks, Heals et DPS pour une équipe optimale</small>
              </div>
            </div>
            <div class="col-md-4">
              <div class="text-center mb-3">
                <i class="fas fa-trophy fa-2x mb-2" style="color: #feca57;"></i>
                <h6 style="font-weight: bold;">Stratégie</h6>
                <small style="opacity: 0.8;">Une fois complète, votre équipe pourra participer aux tournois</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
